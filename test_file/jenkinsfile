pipeline{
    agent any
    stages{
        stage("test"){
            steps{
                echo "========executing $params.test_var========"
            }
            post{
                always{
                    echo "========always  $params.test_var========"
                }
                success{
                    echo "========test executed successfully========"
                }
                failure{
                    echo "========test execution failed========"
                }
            }
        }
    }
    post{
        always{
            echo "========always $params.test_var========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}